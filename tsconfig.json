{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "jsx": "react",
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["dom", "es6"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib/",
    "allowJs": true,
    "moduleResolution": "node",
    "rootDirs": ["src"],
    "baseUrl": "src"
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules"]
}
